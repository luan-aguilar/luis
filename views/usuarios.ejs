<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuários</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1 class="text-center mb-4">Lista de Usuários</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% usuarios.forEach(usuario => { %>
                <tr>
                    <!-- Exibir o ID diretamente para verificar -->
                    <td><%= usuario._id || 'ID não encontrado' %></td>
                    <td><%= usuario.nome %></td>
                    <td><%= usuario.email %></td>
                    <td>
                        <!-- Atualizando o link para usar o ID correto -->
                        <a href="/usuarios/<%= usuario._id %>/estoque" class="btn btn-primary">Gerenciar Estoque</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
